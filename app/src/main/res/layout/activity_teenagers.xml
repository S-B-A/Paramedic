<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TeensMenu">

    <TextView
            android:text="Подростки"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerTeenagers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonLater2"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

    <Button
            android:text="Разделы появятся позже"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:id="@+id/buttonLater2"
            app:layout_constraintTop_toBottomOf="@+id/headerTeenagers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/sky"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>